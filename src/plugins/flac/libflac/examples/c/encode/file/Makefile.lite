topdir = ../../../..
libdir = $(topdir)/obj/$(BUILD)/lib

PROGRAM_NAME = example_c_encode_file

INCLUDES = -I$(topdir)/include

ifeq ($(OS),Darwin)
EXPLICIT_LIBS = $(libdir)/libFLAC.a $(OGG_LIB_DIR)/libogg.a -lm
else
LIBS = -lFLAC -L$(OGG_LIB_DIR) -logg -lm
endif

SRCS_C = main.c

include $(topdir)/build/exe.mk

